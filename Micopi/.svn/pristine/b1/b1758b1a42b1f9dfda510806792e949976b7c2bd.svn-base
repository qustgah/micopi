<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.easytarget.micopi.WelcomeActivity"
    android:background="@color/primary">

    <RelativeLayout
        android:id="@+id/welcomeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/activity_xlarge_margin"
        android:layout_marginRight="@dimen/activity_xlarge_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_above="@+id/firstButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/micopi_logo" />

        <Button
            android:layout_width="match_parent"
            android:text="@string/contact_button_label"
            android:id="@+id/firstButton"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="startMainActivity"
            android:background="@android:color/white"
            android:textColor="@color/primary"
            android:layout_height="78dp"
            android:textSize="@dimen/text_xlarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/introduction_text"
            android:id="@+id/textView"
            android:layout_below="@+id/firstButton"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</RelativeLayout>
